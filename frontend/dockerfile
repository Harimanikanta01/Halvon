# Stage 0: Optional test stage (Node environment for CI/CD)
FROM node:18-alpine AS test
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
# Uncomment the next line if you want to run tests automatically in CI
# CMD ["npm", "test", "--", "--watchAll=false"]

# Stage 1: Build React app
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install          # Use npm install to avoid CI-only issues
COPY . .
ARG http://13.233.183.191:9000
ENV REACT_APP_URL=http://13.233.183.191:9000
RUN npm run build

# Stage 2: Serve production build with Nginx
FROM nginx:alpine
# Remove default Nginx static files
RUN rm -rf /usr/share/nginx/html/*
# Copy built React app from build stage
COPY --from=build /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
